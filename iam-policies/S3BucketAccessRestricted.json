{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "S3PathPrefixRestrict",
            "Effect": "Allow",
            "Action": "s3:ListBucket",
            "Resource": "arn:aws:s3:::my-shared-bucket",
            "Condition": {
                "StringLike": {
                    "s3:prefix": [
                        "app1",
                        "app1/",
                        ""
                    ]
                }
            }
        },
        {
            "Sid": "S3BucketAction",
            "Effect": "Allow",
            "Action": [
                "s3:GetBucketTagging",
                "s3:GetBucketLocation"
            ],
            "Resource": "arn:aws:s3:::my-shared-bucket"
        },
        {
            "Sid": "S3ObjectAction",
            "Effect": "Allow",
            "Action": [
                "s3:PutObject",
                "s3:GetObject",
                "s3:DeleteObjectVersion",
                "s3:RestoreObject",
                "s3:GetObjectTagging",
                "s3:GetObjectVersion"
            ],
            "Resource": "arn:aws:s3:::my-shared-bucket/app1/*"
        }
    ]
 }